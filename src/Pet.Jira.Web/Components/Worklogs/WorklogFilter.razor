@using Pet.Jira.Domain.Models.Issues
@using Pet.Jira.Web.Components.Markdown

<style>
    .pet-full-width {
        width: 100% !important;
    }
</style>

<MudPaper Class="flex-none pa-4" Square="true" Outlined="true">
    <MarkdownTooltip Markdown="worklog-filter-date-range" RootClass="pet-full-width">
        <MudDateRangePicker Label="Date range" @bind-DateRange="_model.Filter.DateRange" />
    </MarkdownTooltip>
    <MarkdownTooltip Markdown="worklog-filter-daily-working-start-time" RootClass="pet-full-width">
        <MudTimePicker Label="Daily working start time" @bind-Time="_model.Filter.DailyWorkingStartTime" Editable="true" />
    </MarkdownTooltip>
    <MarkdownTooltip Markdown="worklog-filter-daily-working-end-time" RootClass="pet-full-width">
        <MudTimePicker Label="Daily working end time" @bind-Time="_model.Filter.DailyWorkingEndTime" Editable="true" />
    </MarkdownTooltip>
    <MarkdownTooltip Markdown="worklog-filter-in-work-issue-status" RootClass="pet-full-width">
        <MudAutocomplete T="IssueStatus" Label="In work issue status" @bind-Value="_model.Filter.IssueStatus"
                         SearchFunc="@SearchIssueStatuses" ToStringFunc="status => status?.Name" MaxItems="Int32.MaxValue"
                         ResetValueOnEmptyText="true" Dense="true" />
    </MarkdownTooltip>
    <MarkdownTooltip Markdown="worklog-filter-comment-time" RootClass="pet-full-width">
        <MudTimePicker Label="Comment worklog duration" @bind-Time="_model.Filter.CommentWorklogTime" Editable="true" />
    </MarkdownTooltip>
    <MarkdownTooltip Markdown="worklog-filter-lunch-time" RootClass="pet-full-width">
        <MudTimePicker Label="Lunch duration" @bind-Time="_model.Filter.LunchTime" Editable="true" />
    </MarkdownTooltip>
</MudPaper>

<MudButton OnClick="Search" Variant="Variant.Filled" Color="Color.Primary" EndIcon="@Icons.Material.Filled.Send" Class="mt-2">Search</MudButton>
