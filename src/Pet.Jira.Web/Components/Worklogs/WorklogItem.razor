<MudElement Class="gap-1 d-flex flex-wrap border-none align-center">
    <MudElement Class="flex-auto gap-1 align-center" Style="width: 300px">
        <WorklogMenu Entity="@Entity" Color="@Color" OnCreatedPressed="AddCustomAsync"/>
        <WorklogTimeRange StartDate="@Entity.RawStartDate" CompleteDate="@Entity.RawCompleteDate" Color="@Color" />
        <MudElement Class="pl-2">
            <MudButton Href="@Entity.Issue.Link"
                       Size="Size.Small"
                       Target="_blank"
                       Variant="Variant.Text"
                       Color="Color.Primary">
                @Entity.Issue.Key
            </MudButton>
            @Entity.Issue.Summary
        </MudElement>
    </MudElement>
    <MudElement Class="flex-none d-flex justify-end pet-time-spent-container align-center">
        <MudElement Class="flex-none d-flex gap-4" Style="width: 128px">
            <MudTextField @bind-Value="@Entity.RemainingTimeSpent" Class="pet-input-control" Variant="Variant.Text" IconSize="Size.Small"></MudTextField>
            <MudElement Style="width: 40px">
                <MudFab Size="Size.Small"
                        StartIcon="@Icons.Material.Filled.Add"
                        Color="@Color"
                        OnClick="AddAsync"
                        Disabled="@Entity.IsEmpty"
                        Class="pet-button" />
            </MudElement>
        </MudElement>
    </MudElement>
</MudElement>


@code {
    // gap-1 - for controlling gutters between grid and flexbox items. https://mudblazor.com/utilities/gap#basic-usage
    // d-flex - enable flex. https://mudblazor.com/utilities/enable-flex#enabling-flexbox
    // flex-wrap - controlling how flex items wrap. the flex items break into multiple lines. https://mudblazor.com/utilities/flex-wrap#wrap
    // border-none.
    // align-center - vertical align elements inside paper
    // flex-none - prevents a flex item from growing or shrinking. https://mudblazor.com/utilities/flex#basic-usage-none
    // flex-auto - allows a flex item to grow and shrink as needed and taking its initial size into account
}
